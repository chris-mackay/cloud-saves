<Window x:Class="cloud_saves.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:cloud_saves"
        mc:Ignorable="d"
        Title="Cloud Saves" 
        Height="450" 
        Width="800"
        WindowStartupLocation="CenterScreen">
    <Grid Margin="10">
        <StackPanel>
            <Label Content="Local Location"/>
            <TextBox x:Name="txtLocal" Height="25" Padding="2"/>
            <Label Content="Server Location"/>
            <TextBox x:Name="txtServer" Height="25" Padding="2"/>
        </StackPanel>
    </Grid>
</Window>
